# SENTIENTCITY AI - Environment Configuration
# Copy this file to .env and update values

# ============== General ==============
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
SERVICE_NAME=sentientcity

# ============== API ==============
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============== Security ==============
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# ============== Database ==============
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sentientcity
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# ============== Redis ==============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============== Kafka ==============
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=sentientcity
KAFKA_AUTO_OFFSET_RESET=latest

# ============== Inference ==============
INFERENCE_DEVICE=cuda:0
INFERENCE_BATCH_SIZE=1
INFERENCE_FP16=true
INFERENCE_TENSORRT=false
INFERENCE_MODEL_PATH=/models
INFERENCE_CONFIDENCE_THRESHOLD=0.5
INFERENCE_NMS_THRESHOLD=0.45

# ============== LLM ==============
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.3

# ============== Monitoring ==============
GRAFANA_PASSWORD=admin

# ============== CORS ==============
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
